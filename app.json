{
    "name": "phoenix-trello",
    "description": "A Trello tribute in Phoenix",
    "repository": "https://github.com/bf4/phoenix-trello",
    "success_url": "/",
    "scripts": {
      "postdeploy": "scripts/postdeploy",
      "pr-predestroy": "scripts/predestroy"
    },
    "env": {
        "DATABASE_URL": {
          "description": "The value is generated by Heroku, so required is false",
          "required": false
        },
        "APP_HOST": {
          "description": "Is the app host. e.g. 'phoenix-trello.herokuapp.com'"
        },
        "NPM_CONFIG_PRODUCTION": "false",
        "POOL_SIZE": "10",
        "SECRET_KEY_BASE": {
          "generator": "secret"
        },
        "GUARDIAN_SECRET_KEY": {
          "generator": "secret"
        }
    },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "stack": "cedar-14",
  "addons": [
    "heroku-postgresql", { "hobby-dev", "as": "DATABASE", "options": { "version": "9.5"} },
    "scheduler", { "plan": "standard", "as": "SCHEDULER" }
  ],
  "buildpacks": [
  ]
}
